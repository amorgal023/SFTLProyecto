<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResumenActivity"
    android:background="@color/Cyan">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llMenu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginHorizontal="0dp"
        android:background="@drawable/topbar_background">
        <ImageButton
            android:id="@+id/butIbBack"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:src="@drawable/arrowleft"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:backgroundTint="@color/Cyan"
            android:layout_weight="3"
            app:tint="@color/White" />
        <ImageView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:src="@drawable/logo"
            android:layout_weight="1"
            app:tint="@color/White" />
        <View
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="3"
            app:tint="@color/White" />

    </androidx.appcompat.widget.LinearLayoutCompat>
    <LinearLayout
        app:layout_constraintTop_toBottomOf="@id/llMenu"
        app:layout_constraintBottom_toTopOf="@id/butFinalizar"
        android:id="@+id/llDatosPersonales"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/roundedbackground"
        android:orientation="vertical"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="20dp"
        android:paddingHorizontal="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lexend"
            android:paddingTop="13dp"
            android:paddingBottom="5dp"
            android:text="@string/str_resumen"
            android:textAlignment="center"
            android:textColor="@color/DarkOrange"
            android:textSize="20sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="5dp"
                android:background="@color/CyanDark" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexend"
                android:paddingVertical="3dp"
                android:text="@string/str_resumen_nombre"
                android:textAlignment="textStart"
                android:textColor="@color/CyanDark"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/tvNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexend"
                android:paddingVertical="3dp"
                tools:text="Pepito girllo"
                android:textAlignment="center"
                android:textColor="@color/Black"
                android:textSize="18sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexend"
                android:paddingVertical="3dp"
                android:text="@string/str_resumen_email"
                android:textAlignment="textStart"
                android:textColor="@color/CyanDark"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexend"
                android:paddingVertical="3dp"
                tools:text="pepitogrillo@gmail.com"
                android:textAlignment="center"
                android:textColor="@color/Black"
                android:textSize="18sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexend"
                android:paddingVertical="3dp"
                android:text="@string/str_resumen_fecha"
                android:textAlignment="textStart"
                android:textColor="@color/CyanDark"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/tvFecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexend"
                android:paddingVertical="3dp"
                tools:text="01/01/1970"
                android:textAlignment="center"
                android:textColor="@color/Black"
                android:textSize="18sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexend"
                android:paddingVertical="3dp"
                android:text="@string/str_resumen_numpersonas"
                android:textAlignment="textStart"
                android:textColor="@color/CyanDark"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/tvNumPersonas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexend"
                android:paddingVertical="3dp"
                tools:text="4"
                android:textAlignment="center"
                android:textColor="@color/Black"
                android:textSize="18sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexend"
                android:paddingVertical="3dp"
                android:text="@string/str_resumen_total"
                android:textAlignment="textStart"
                android:textColor="@color/CyanDark"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/tvPrecio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexend"
                android:paddingVertical="3dp"
                tools:text="19.80 â‚¬"
                android:textAlignment="center"
                android:textColor="@color/Black"
                android:textSize="18sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexend"
                android:paddingVertical="3dp"
                android:text="@string/str_resumen_puntua"
                android:textAlignment="textStart"
                android:textColor="@color/CyanDark"
                android:textSize="18sp"/>

            <RatingBar
                android:id="@+id/rbExperiencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progressTint="@color/Orange"
                android:numStars="5"
                android:rating="3"
                android:stepSize="1.0"

                android:scaleX="0.5"
                android:scaleY="0.5"/>


        </LinearLayout>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/butFinalizar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/Orange"
        android:text="@string/str_pasarelaPago"
        android:fontFamily="@font/lexend"
        android:textColor="@color/White"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal"
        android:gravity="center">
    </androidx.appcompat.widget.AppCompatButton>
</androidx.constraintlayout.widget.ConstraintLayout>
